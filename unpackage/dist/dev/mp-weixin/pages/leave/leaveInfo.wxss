.header {
  width: 100%;
  box-shadow: 0px 2px 6px rgba(0, 204, 146, 0.1);
}
.header .head {
  position: relative;
  padding: 30rpx;
}
.header .head image {
  position: absolute;
  left: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.header .head text {
  font-size: 36rpx;
  font-weight: 400;
}
.leave {
  padding: 48rpx 32rpx;
}
.leave .leaveitem {
  margin-bottom: 32rpx;
}
.leave .leaveitem > text {
  color: #383838;
  font-size: 30rpx;
  font-weight: 400;
  display: inline-block;
  margin-bottom: 10rpx;
}
.leave .leaveitem .jia {
  color: #0dce97;
  font-size: 34rpx;
  font-weight: 700;
}
.leave .leaveitem > view {
  box-shadow: 0px 0px 8px rgba(13, 206, 151, 0.15);
  padding: 20rpx;
  border-radius: 10rpx;
}
.leave .leaveitem > view .dataimg {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
.leave .leaveitem > view .numday {
  color: #0dce97;
  font-size: 30rpx;
}
.leave .leaveitem textarea {
  background: #ffffff;
  width: 100%;
  padding: 20rpx;
  box-shadow: 0px 0px 8px rgba(13, 206, 151, 0.15);
  border-radius: 8px;
  box-sizing: border-box;
}
.leave .leaveitem .imgList {
  padding: 24rpx 20rpx;
  box-shadow: 0px 0px 8px rgba(13, 206, 151, 0.15);
}
.leave .leaveitem .imgList image {
  border-radius: 20rpx;
  width: 120rpx;
  height: 120rpx;
}
.leave .leaveitem .additem {
  width: 48%;
  box-shadow: none;
  padding: 0;
}
.leave .leaveitem .additem text {
  color: #383838;
  font-size: 32rpx;
  font-weight: 500;
}
.leave .leaveitem .additem > view {
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0px 0px 8px rgba(13, 206, 151, 0.15);
}
.leave .leaveitem .additem > view text {
  font-size: 28rpx;
  font-weight: 400;
}
.leave .leaveitem .additem image {
  border-radius: 16rpx;
  width: 72rpx;
  height: 72rpx;
  margin-right: 10rpx;
}
.leave .btnqx {
  width: 90%;
  padding: 16rpx;
  text-align: center;
  border-radius: 32rpx;
  background: #ffffff;
  border: 1px solid #999;
  color: #999;
}
.leave .btnList .btnitem {
  box-sizing: border-box;
  width: 48%;
  padding: 16rpx;
  text-align: center;
  border-radius: 32rpx;
}
.leave .btnList .no {
  background: #ffffff;
  border: 1px solid #e33c64;
  color: #e33c64;
}
.leave .btnList .yes {
  background: #0dce97;
  color: #fff;
}

