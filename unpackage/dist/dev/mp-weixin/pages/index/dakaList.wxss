.no {
  text-align: center;
  margin-top: 200rpx;
  color: #999;
}
.header {
  width: 100%;
  box-shadow: 0px 2px 6px rgba(0, 204, 146, 0.1);
}
.header .head {
  position: relative;
  padding: 30rpx;
}
.header .head image {
  position: absolute;
  left: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.header .head text {
  font-size: 36rpx;
  font-weight: 400;
}
.header .date {
  padding: 20rpx 50rpx;
}
.header .date text {
  font-size: 28rpx;
  margin-right: 10rpx;
  font-weight: 700;
}
.header .date image {
  width: 36rpx;
  height: 28rpx;
}
.list {
  background: #f0f2f2;
  width: 100%;
  min-height: 90vh;
  padding: 48rpx 32rpx;
  box-sizing: border-box;
}
.list .listItem {
  margin-bottom: 40rpx;
  border-radius: 48rpx;
  padding: 26rpx 30rpx;
  border-left: 16rpx solid #00cc92;
  background-color: #fff;
  box-sizing: border-box;
}
.list .listItem .time {
  font-size: 32rpx;
  font-weight: 500;
}
.list .listItem .iteminfo {
  margin-top: 20rpx;
  background: #f2fcf9;
  border-radius: 16rpx;
  padding: 8rpx 26rpx;
}
.list .listItem .iteminfo image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.list .listItem .iteminfo text {
  font-size: 28rpx;
  font-weight: 400;
}
.list .listItem .iteminfo .centext {
  color: #a6a6a6;
  min-width: 240rpx;
}
.list .listItem .iteminfo .chizao {
  color: #ff8d1a;
  background: #ffebd6;
  border: 1px solid #ff8d1a;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 400;
  padding: 4rpx 10rpx;
}
.list .listItem .iteminfo .zhenchang {
  background: #c1f5e6;
  border: 1px solid #00cc92;
  color: #00cc92;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 400;
  padding: 4rpx 10rpx;
}
.list .listItem .iteminfo .queka {
  background: #fccccc;
  border: 1px solid #d43030;
  color: #d43030;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 400;
  padding: 4rpx 10rpx;
}
.popup2 {
  border-bottom: none;
  border-radius: 30rpx 30rpx 0 0;
  width: 100%;
  box-sizing: border-box;
  height: 50vh;
  overflow: auto;
  background-color: #fff;
}
.popup2 .picker-view {
  width: 750rpx;
  height: 88%;
}
.popup2 .btnclose {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 12%;
  color: #fff;
  text-align: center;
  background: linear-gradient(0deg, rgba(0, 204, 146, 0.65) 0%, #00cc92 100%);
}
.popup2 .picker_item {
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

